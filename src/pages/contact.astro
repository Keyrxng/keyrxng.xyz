---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Contact" description="Get in touch — best via email. UK timezone. Replies within 48 hours. Available now." theme="atelier">
  <section class="stack" style="max-width: var(--container-narrow);">
    <h1>Contact</h1>
  <p class="page-intro">Best channel is email. UK timezone. Replies within 48h. Currently taking on new constrained, outcome-focused work.</p>
    <div class="cluster">
      <a class="primary" href="mailto:keyrxng@proton.me?subject=Project%20inquiry%20—%20Keyrxng">Email me</a>
      <a class="ghost" href="https://www.linkedin.com/in/keyrxng" target="_blank" rel="noopener">LinkedIn</a>
      <a class="ghost" href="https://github.com/keyrxng" target="_blank" rel="noopener">GitHub</a>
    </div>
    <div class="meta-grid">
      <div class="meta-item">
        <div class="meta-label">Email</div>
        <a href="mailto:keyrxng@proton.me">keyrxng@proton.me</a>
      </div>
      <div class="meta-item">
        <div class="meta-label">Timezone</div>
        <div>UK (GMT/BST)</div>
      </div>
      <div class="meta-item">
        <div class="meta-label">Response</div>
        <div>Within 48 hours</div>
      </div>
      <div class="meta-item">
        <div class="meta-label">Availability</div>
        <div>Available now</div>
      </div>
    </div>
  </section>

  <div class="divider divider--spaced" role="presentation"></div>

  <section class="stack" aria-labelledby="contact-brief-heading" style="max-width: var(--container-wide);">
  <h2 id="contact-brief-heading" style="margin:0">To move fast, include</h2>
    <div class="focus-grid">
      <div class="focus-card">
        <div class="focus-title">Goal</div>
  <div class="focus-sub">Desired outcome / definition of done</div>
      </div>
      <div class="focus-card">
        <div class="focus-title">Context</div>
  <div class="focus-sub">Current state, constraints, stakeholders</div>
      </div>
      <div class="focus-card">
        <div class="focus-title">Timeline</div>
  <div class="focus-sub">Key dates, urgency window</div>
      </div>
      <div class="focus-card">
        <div class="focus-title">Scope</div>
  <div class="focus-sub">Budget or time window</div>
      </div>
    </div>
  </section>
</BaseLayout>

